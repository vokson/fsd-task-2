//- description
//- caption
//- Modificators:
//- font: (s|m) - font size of description
mixin checkbox__text(parameters)
    include ../__caption/checkbox__caption.pug
    include ../__description/checkbox__description.pug

    div(class='checkbox__text')
        if parameters.caption
            +checkbox__caption({'text': parameters.caption})
        if parameters.description
            +checkbox__description({'text': parameters.description, 'font': parameters.font})
        