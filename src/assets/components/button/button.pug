//- text: text inside button
//- icon: (arrow|heart|heart-border)
//- Modificators:
//- size: (s|m|b)
//- font: (small|medium|normal|big)
//- font-color: (dark-gray|dark-gray|white|purple)
//- background: (gray|purple-gradient|green-gradient)
//- border: (thick|thin)
//- opacity

mixin button(parameters)
    -
        let classes = ['button']

        if (parameters.size) {
            classes.push('button_size_' + parameters.size);
        }

        if (parameters.font) {
            classes.push('button_font_' + parameters.font);
        }

        if (parameters['font-color']) {
            classes.push('button_font-color_' + parameters['font-color']);
        }

        if (parameters.background) {
            classes.push('button_background');
            classes.push('button_background_' + parameters.background);
        }

        if (parameters.opacity) {
            classes.push('button_opacity');
        }

        if (parameters.border) {
            classes.push('button_border');
            classes.push('button_border_' + parameters.border);
        }

    include ./__icon/button__icon.pug

    div(type='button' class=classes)&attributes(attributes)= parameters.text
        if parameters.icon
            +button__icon({'icon': parameters.icon})