doctype html
html(lang='ru')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=1440, initial-scale=1.0, maximum-scale=1.0, user-scalable=1.0')
        link(rel='icon' sizes='16x16 32x32 48x48' href='favicon.ico')
    body
        include ../../assets/components/logo/logo.pug
        include ../../assets/components/label/label.pug
        include ../../assets/components/textfield/textfield.pug
        include ../../assets/components/buttonfield/buttonfield.pug
        include ../../assets/components/button/button.pug
        include ../../assets/components/pagination/pagination.pug
        include ../../assets/components/checkbox/checkbox.pug
        include ../../assets/components/radio/radio.pug
        include ../../assets/components/rate/rate.pug
        include ../../assets/components/dropdown/dropdown.pug
        include ../../assets/components/expand-checkbox/expand-checkbox.pug

        +logo({'size': 'm'})(class='page__logo')
        
        div(class='page')
            div(class='page__container container')
                div(class='container__block-1 block-1')
                    +textfield({'label': 'TEXT FIELD', 'placeholder' : 'Email'})(class='block-1__textfield')
                    +textfield({'label': 'TEXT FIELD', 'value' : 'This is pretty awesome'})(class='block-1__focused-textfield')
                    +buttonfield({'label': 'DROPDOWN', 'value' : 'Сколько гостей', 'icon': 'expand', 'disabled': true})(class='block-1__guest-buttonfield')
                    +textfield({'label': 'MASKED TEXT FIELD', 'date-mask' : true})(class='block-1__masked-textfield')

                    div(class='block-1__buttonfield-row')
                        +buttonfield({'label': 'DATE DROPDOWN', 'value' : 'ДД.ММ.ГГГГ', 'icon': 'expand', 'disabled': true})(class='block-1__single-date-buttonfield')
                        +buttonfield({'label': 'DATE DROPDOWN', 'value' : '19.08.2019', 'icon': 'expand', 'disabled': true})(class='block-1__chosen-single-date-buttonfield')

                    +buttonfield({'label': 'FILTER DATE DROPDOWN', 'value' : '19 авг - 23 авг', 'icon': 'expand', 'disabled': true})(class='block-1__filter-date-buttonfield')
                    +buttonfield({'label': 'SUBSCRIPTION TEXT FIELD', 'placeholder' : 'Email', 'icon': 'arrow'})(class='block-1__subscription-textfield')

                div(class='container__block-2 block-2')
                    
                    div(class='block-2__checkbox-buttons')
                        +label({'label': 'CHECKBOX BUTTONS'})
                        +checkbox({'name' : 'allowed', 'value' : 'smoke', 'description': 'Можно курить'})(class='block-2__checkbox-1')
                        +checkbox({'name' : 'allowed', 'value' : 'pets', 'description': 'Можно с питомцами', 'checked': true})(class='block-2__checkbox-2')
                        +checkbox({'name' : 'allowed', 'value' : 'guests', 'description': 'Можно пригласить гостей (до 10 человек)', 'checked': true})(class='block-2__checkbox-3')

                    div(class='block-2__radio-buttons')
                        +label({'label': 'RADIO BUTTONS'})

                    div(class='block-2__radio-row')
                        +radio({'name' : 'gender', 'value' : 'male', 'description': 'Мужчина', 'checked': true})(class='block-2__radio-man')
                        +radio({'name' : 'gender', 'value' : 'female', 'description': 'Женщина'})(class='block-2__radio-woman')

                    div(class='block-2__toggles')
                        +label({'label': 'TOGGLE'})

                        div(class='block-2__toggles-row')
                            +checkbox({'name' : 'special_order', 'value' : 'on', 'description': 'Получать спецпредложения', 'toggle': true, 'checked': true})(class='block-2__toggle-on')
                            +checkbox({'name' : 'special_order', 'value' : 'on', 'description': 'Получать спецпредложения', 'toggle': true})(class='block-2__toggle-off')

                    div(class='block-2__like-buttons')
                        +label({'label': 'LIKE BUTTON'})

                        div(class='block-2__like-buttons-row')
                            +button({'text': '2', 'theme': 'like'})(class='block-2__like-off')
                            +button({'text': '12', 'theme': 'like', 'active' : true})(class='block-2__like-on')

                    div(class='block-2__rate-buttons')
                        +label({'label': 'RATE BUTTON'})

                        div(class='block-2__rate-buttons-row')
                            +rate({'score': 4, 'total': 5})(class='block-2__rate-left')
                            +rate({'score': 5, 'total': 5})(class='block-2__rate-right')

                div(class='container__block-3 block-3')
                    +textfield({'label': 'TEXT FIELD', 'placeholder' : 'Email'})(class='block-3__range-slider')
                   
                    div(class='block-3__buttons')
                        +label({'label': 'BUTTONS'})

                        div(class='block-3__button-row-1')
                            +button({'text': 'CLICK ME', 'theme' : 'common-solid'})(class='block-3__button-1')
                            +button({'text': 'CLICK ME', 'theme' : 'common-solid'})(class='block-3__button-2')

                        div(class='block-3__button-row-2')
                            +button({'text': 'CLICK ME', 'theme' : 'common-border'})(class='block-3__button-3')
                            +button({'text': 'CLICK ME', 'theme' : 'common-border'})(class='block-3__button-4')
                        
                        div(class='block-3__button-row-3')
                            +button({'text': 'CLICK ME', 'theme' : 'common'})(class='block-3__button-5')
                            +button({'text': 'CLICK ME', 'theme' : 'common'})(class='block-3__button-6')
                        
                        +button({'text': 'ПЕРЕЙТИ К ОПЛАТЕ', 'theme' : 'common-solid', 'icon': 'arrow'})(class='block-3__button-7')

                        div(class='block-3__button-row-4')
                            +label({'label': 'PAGINATION'})
                        
                        div(class='block-3__button-row-5')
                            +pagination()(class='block-3__pagination')

                div(class='container__block-4 block-4')
                    +dropdown({'theme': 'room', 'counts': [2,2,0], 'text': '2 спальни, 2 кровати...', 'label': 'DROPDOWN'})(class='block-4__dropdown-close')
                    +dropdown({'theme': 'room', 'counts': [2,2,0], 'text': '2 спальни, 2 кровати...', 'label': 'DROPDOWN', 'expanded': true})(class='block-4__dropdown-open')

                    +expand-checkbox({'label': 'EXPANDABLE CHECKBOX LIST'})(class='block-4__expand-checkbox-close')
                    +expand-checkbox({'label': 'EXPANDABLE CHECKBOX LIST', 'expanded': true})(class='block-4__expand-checkbox-open')


                div(class='container__block-5 block-5')
                    +dropdown({'theme': 'guest', 'counts': [0,0,0], 'label': 'DROPDOWN', 'expanded': true, 'apply': true})(class='block-5__dropdown')

                    div(class='block-5__rich-checkbox-buttons')
                        +label({'label': 'RICH CHECKBOX BUTTONS'})
                        +checkbox({'name' : 'accessibility', 'value' : 'wide_corridor', 'description': 'Ширина коридоров в номере не менее 91 см.', 'caption': 'Широкий коридор'})(class='block-5__checkbox-1')
                        +checkbox({'name' : 'accessibility', 'value' : 'invalid_helper', 'description': 'На 1 этаже вас встретит специалист  и проводит до номера.', 'caption': 'Помощник для инвалидов'})(class='block-5__checkbox-2')

                div(class='container__block-6 block-6')
                    +dropdown({'theme': 'guest', 'counts': [2,1,0], 'label': 'DROPDOWN', 'expanded': true, 'apply': true, 'clean': true})(class='block-6__dropdown')

                div(class='container__block-7 block-7')
